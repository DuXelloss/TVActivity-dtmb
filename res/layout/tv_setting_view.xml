<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_setting_view"
    android:layout_width="578px"
    android:layout_height="290px"
    android:layout_centerInParent="true"
    android:background="@drawable/tv_setting_bg"
    android:paddingBottom="40px"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingTop="40px" >

    <ImageView
        android:id="@+id/tv_setting_focus"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tv_setting_focus" />

    <LinearLayout
        android:id="@+id/tv_setting_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px" >

        <LinearLayout
            android:id="@+id/tv_setting_item"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center_vertical"
                android:textColor="@color/tv_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/tv_setting_left"
                android:layout_width="19px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tv_list_left" />

            <TextView
                android:id="@+id/tv_setting_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textColor="@color/tv_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/tv_setting_right"
                android:layout_width="19px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tv_list_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_setting_item"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center_vertical"
                android:textColor="@color/tv_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/tv_setting_left"
                android:layout_width="19px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tv_list_left" />

            <TextView
                android:id="@+id/tv_setting_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textColor="@color/tv_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/tv_setting_right"
                android:layout_width="19px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tv_list_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_setting_item"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center_vertical"
                android:textColor="@color/tv_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/tv_setting_left"
                android:layout_width="19px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tv_list_left" />

            <TextView
                android:id="@+id/tv_setting_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textColor="@color/tv_white"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/tv_setting_right"
                android:layout_width="19px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tv_list_right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>