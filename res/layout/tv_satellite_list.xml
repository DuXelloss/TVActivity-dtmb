<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280px"
    android:layout_height="720px"
    android:background="@drawable/tv_search_bg" >

    <TextView
        android:id="@+id/tv_satellite_title"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center"
        android:text="@string/tv_satellite_list"
        android:textColor="@color/tv_unselected"
        android:textSize="32px" />

    <LinearLayout
        android:id="@+id/tv_satellite_header"
        android:layout_width="854px"
        android:layout_height="60px"
        android:layout_below="@id/tv_satellite_title"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_satellite_lnb1"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_lbn1"
            android:textColor="@color/tv_white"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_satellite_lnb2"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_lbn2"
            android:textColor="@color/tv_white"
            android:textSize="32px"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_satellite_items"
        android:layout_width="854px"
        android:layout_height="480px"
        android:layout_below="@id/tv_satellite_header"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_satellite_help"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_below="@id/tv_satellite_items"
        android:gravity="center"
        android:text="@string/tv_satellite_help"
        android:textColor="@color/tv_unselected"
        android:textSize="32px" />

</RelativeLayout>